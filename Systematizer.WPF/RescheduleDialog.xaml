<Window x:Class="Systematizer.WPF.RescheduleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Systematizer.WPF"
        mc:Ignorable="d"
        Title="Reschedule" ShowInTaskbar="False" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" SizeToContent="WidthAndHeight" >
    <StackPanel>
        <TextBlock Margin="5" Text="Enter the number of days in the future to schedule (1-9)"/>
        <TextBlock Margin="5" Text="Or enter a code for the day of the week: S M T W H F A"/>
        <TextBlock Margin="5" Text="Or enter Y for today"/>
        <TextBox x:Name="eCommand" Margin="5" Width="12" HorizontalAlignment="Left" TextChanged="eCommand_TextChanged"/>
        <Button Margin="5" IsCancel="True" HorizontalAlignment="Left">Cancel</Button>
    </StackPanel>
</Window>
